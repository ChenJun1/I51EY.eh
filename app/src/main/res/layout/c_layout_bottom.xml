<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#FCFCFC"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/c_homepager_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >
            <ImageView  
                android:id="@+id/c_homepager_img"  
                android:layout_width="30dp"  
                android:layout_height="30dp"  
                android:layout_gravity="center_horizontal"  
                android:src="@drawable/home_grey"/>
            <TextView
                android:id="@+id/c_homepager_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                android:textColor="#7B7873" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/c_me_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView  
                android:id="@+id/c_me_img"  
                android:layout_width="30dp"  
                android:layout_height="30dp"  
                android:layout_gravity="center_horizontal"  
                android:src="@drawable/me"/>
            <TextView
                android:id="@+id/c_me_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我"
                android:textColor="#7B7873" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>