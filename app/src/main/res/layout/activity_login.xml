<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/login"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/help_layout"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help" />
        </LinearLayout>
    </LinearLayout>

    <!--
         <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:scaleType="center"
        android:visibility="invisible"
        android:src="@drawable/logo" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.cvnavi.logistics.i51eyun.eh.widget.edittext.EditTextWithDel
                android:id="@+id/mPhone"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_editext"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="none"
                android:maxLength="11"
                android:padding="10dp"
                android:phoneNumber="true"
                android:shadowRadius="3.0"
                android:textScaleX="1"
                android:textSize="16sp" >

                <requestFocus />
            </com.cvnavi.logistics.i51eyun.eh.widget.edittext.EditTextWithDel>

            <LinearLayout
                android:id="@+id/mlinearmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:visibility="visible" >

                <com.cvnavi.logistics.i51eyun.eh.widget.edittext.EditTextWithDel
                    android:id="@+id/mPassword"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.35"
                    android:background="@drawable/rounded_editext"
                    android:hint="请输入验证码"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:phoneNumber="true"
                    android:shadowRadius="3.0"
                    android:textScaleX="1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/iscode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_bount"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="获取验证码"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/completed_order_status"
                android:text="登\t\t录"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/isCheckBox"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="30dip"
                    android:background="@drawable/ischeckbox"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:textColor="#6FBAE3" />

                <TextView
                    android:id="@+id/checkbox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/i_agree"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/Iagreement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/agreement"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>